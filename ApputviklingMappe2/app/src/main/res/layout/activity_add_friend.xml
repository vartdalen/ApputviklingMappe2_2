<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="40dp">

            <ListView
                android:id="@+id/friend_listview"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_centerHorizontal="true" />

            <!-- Add friend Button -->
            <Button
                android:id="@+id/add_friend_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/friend_listview"
                android:layout_below="@+id/friend_listview"
                android:background="@drawable/button_primary"
                android:layout_marginTop="25dp"
                android:onClick="addFriend"
                android:padding="12dp"
                android:text="@string/add_friend"
                android:theme="@style/ButtonTheme" />

            <!-- Delete friend Button -->
            <Button
                android:id="@+id/delete_friend_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/friend_listview"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_primary"
                android:onClick="deleteFriend"
                android:padding="12dp"
                android:text="@string/delete_friend"
                android:theme="@style/ButtonTheme" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>